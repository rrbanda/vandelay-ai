# =============================================================================
# Vandelay Search - Environment Variables Template
# =============================================================================
# Copy this file to .env and fill in your actual values:
#   cp env.template .env
#
# IMPORTANT: Never commit .env to git!
# =============================================================================

# Neo4j Configuration
# For Podman: use host.containers.internal to reach Neo4j on your host
NEO4J_URI=bolt://host.containers.internal:7687
NEO4J_USERNAME=neo4j
NEO4J_PASSWORD=your-neo4j-password-here

# LLM Configuration
OPENAI_API_BASE=https://your-llm-endpoint/v1
OPENAI_API_KEY=your-api-key-here
ADK_MODEL=openai/your-model-name

# Vector Store Configuration
LLAMASTACK_BASE_URL=https://your-llamastack-endpoint
VECTOR_STORE_ID=your-vector-store-id
VECTOR_STORE_VERIFY_SSL=false

# Optional: Google AI (if using Vertex AI or Gemini directly)
# GOOGLE_GENAI_USE_VERTEXAI=false
# GOOGLE_API_KEY=your-google-api-key
